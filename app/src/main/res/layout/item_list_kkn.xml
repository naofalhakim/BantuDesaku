<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:background="@color/colorWhite"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/img_kkn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gb1"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bdtrsp"
            >

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="open sponsorship"
            android:textStyle="italic"
            android:padding="4dp"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:background="@color/colorText"
            />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/txtx_title_kkn"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Kebersihan Pangan"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                />

            <View
                android:layout_below="@id/txtx_title_kkn"
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:background="@color/colorWhite">
            </View>

        </LinearLayout>


        <TextView
            android:id="@+id/txtx_content_kkn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_daerah"
            android:layout_below="@id/linear1"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:gravity="center"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textColor="@color/colorWhite" />

        <TextView
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:id="@+id/txt_daerah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Nganjuk"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:id="@+id/txt_kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Nganjuk"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="10dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>